<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/main_Text">
   <LinearLayout
       android:layout_weight="4" android:layout_width="0dp"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/rank"
           android:layout_gravity="center"
           android:layout_marginLeft="2dp"
           android:layout_marginRight="2dp"
           android:layout_weight="0.2" android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textSize="10dp"
           android:textStyle="bold"

           style="@style/team_Text"/>
       <ImageView
           android:id="@+id/flag"
           android:layout_gravity="center"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginRight="3dp"
           style="@style/team_Text"/>
       <TextView
           android:id="@+id/name"
           android:layout_gravity="center"
           android:layout_weight="1" android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="@color/medium"
           android:textSize="12dp"
           style="@style/team_Text"/>
   </LinearLayout>
    <TextView
        android:id="@+id/app"
        android:layout_gravity="center"
        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/team_Text"/>
    <TextView
        android:id="@+id/win"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/team_Text"/>
    <TextView
        android:id="@+id/draw"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/team_Text"/>
    <TextView
        android:id="@+id/lose"

        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/team_Text"/>
    <TextView
        android:id="@+id/goal"
        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/team_Text"/>
    <TextView
        android:id="@+id/minusGoal"
        android:layout_gravity="center"
        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/team_Text"/>
    <TextView
        android:id="@+id/compareGG"
        android:layout_gravity="center"
        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/team_Text"/>
    <TextView
        android:id="@+id/winScore"
        android:layout_gravity="center"
        android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/sblue"
        style="@style/team_Text"/>
</LinearLayout>